{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "skipLibCheck": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true, 
    "paths": {
      "@modules/*": ["./src/modules/*"],
      "@decorators/*": ["./src/decorators/*"],
      "@models/*": ["./src/models/*"],
      "@common/*": ["./src/common/*"]
    },
    "types": [
      "node"
    ]
  },
  "include": ["src/**/*.ts", "src/templates/**/*"],
}